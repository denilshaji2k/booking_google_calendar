{
    "functions": [
      {
        "name": "book_appointment",
        "description": "Book a new appointment with Google Calendar integration and Meet link",
        "parameters": {
          "type": "object",
          "required": ["client_name", "client_phone", "date", "time"],
          "properties": {
            "client_name": {
              "type": "string",
              "description": "Full name of the client"
            },
            "client_phone": {
              "type": "string",
              "description": "Contact phone number of the client"
            },
            "timezone": {
              "type": "string",
              "description": "Timezone for the appointment",
              "default": "Asia/Kolkata"
            },
            "date": {
              "type": "string",
              "description": "Appointment date in YYYY-MM-DD format"
            },
            "time": {
              "type": "string",
              "description": "Appointment time in hh:mm A format (e.g., '10:30 AM')"
            }
          }
        }
      },
      {
        "name": "view_appointments",
        "description": "View appointments for a specific client and date range",
        "parameters": {
          "type": "object",
          "required": ["client_id", "start_date"],
          "properties": {
            "client_id": {
              "type": "string",
              "description": "Unique identifier or name of the client"
            },
            "start_date": {
              "type": "string",
              "description": "Start date in YYYY-MM-DD format"
            },
            "end_date": {
              "type": "string",
              "description": "End date in YYYY-MM-DD format (optional)"
            },
            "timezone": {
              "type": "string",
              "description": "Timezone for the appointments",
              "default": "Asia/Kolkata"
            }
          }
        }
      },
      {
        "name": "reschedule_appointment",
        "description": "Reschedule an existing appointment to a new date and time",
        "parameters": {
          "type": "object",
          "required": ["appointment_id", "date", "time"],
          "properties": {
            "appointment_id": {
              "type": "string",
              "description": "Unique identifier of the appointment to reschedule"
            },
            "date": {
              "type": "string",
              "description": "New date in YYYY-MM-DD format"
            },
            "time": {
              "type": "string",
              "description": "New time in hh:mm A format (e.g., '02:30 PM')"
            },
            "timezone": {
              "type": "string",
              "description": "Timezone for the appointment",
              "default": "Asia/Kolkata"
            }
          }
        }
      },
      {
        "name": "cancel_appointment",
        "description": "Cancel an existing appointment",
        "parameters": {
          "type": "object",
          "required": ["appointment_id"],
          "properties": {
            "appointment_id": {
              "type": "string",
              "description": "Unique identifier of the appointment to cancel"
            }
          }
        }
      },
      {
        "name": "get_available_slots",
        "description": "Get available appointment time slots for a specific date",
        "parameters": {
          "type": "object",
          "required": ["date"],
          "properties": {
            "date": {
              "type": "string",
              "description": "Date to check availability in YYYY-MM-DD format"
            },
            "timezone": {
              "type": "string",
              "description": "Timezone for the slots",
              "default": "Asia/Kolkata"
            }
          }
        }
      }
    ]
  }